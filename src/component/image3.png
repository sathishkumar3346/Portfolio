.skills {
  padding: 50px 0;
  background-color: #f9f9f9;
}

.skills-container {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.skills-section {
  width: 45%;
  margin-bottom: 30px;
}

.skills-section h3 {
  font-size: 24px;
  margin-bottom: 20px;
  color: #333;
}

.skills-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
}

.skill {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 18px;
  background-color: #fff;
  padding: 15px;
  border-radius: 8px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease-in-out;
  text-align: center;
}

.skill h4 {
  margin-top: 10px;
}

.skill:hover {
  transform: translateY(-5px);
}

.skill-icon {
  font-size: 50px;
}

@media (max-width: 768px) {
  .skills-section {
    width: 100%;
  }
}
